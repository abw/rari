{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ALWAYS"
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "RUST_LOG": "info"
      }
    }
  }
}
